{
    "manifest_version": 3,
    "name": "LeetCode Friends",
    "version": "1.0",
    "description": "Add friends to your LeetCode profile and display them.",
    "permissions": ["storage", "activeTab"],
    "content_scripts": [
      {
        "matches": ["https://leetcode.com/u/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    }
  }